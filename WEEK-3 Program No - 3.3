#include <iostream>
#include <string>
using namespace std;

class Student {
private:
    string name;
    int rollNumber;
    float marks;
public:
    // Default constructor
    Student() {
        name = "";
        rollNumber = 0;
        marks = 0.0;
    }
    // Set details using this pointer
    void setDetails(string name, int rollNumber, float marks) {
        this->name = name;
        this->rollNumber = rollNumber;
        this->marks = marks; 
    }
    // Update name using this pointer and return current object
    Student& updateName(string name) {
        this->name = name;
        return *this;
    }
    // Update marks using this pointer and return current object
    Student& updateMarks(float marks) {
        this->marks = marks;
        return *this;
    }
    // Display student details
    void display() {
        cout << "\n--- Student Record ---\n";
        cout << "Name       : " << name << endl;
        cout << "Roll No.   : " << rollNumber << endl;
        cout << "Marks      : " << marks << "/100\n";
    }
};
int main() {
    Student s1;
    string n;
    int r;
    float m;

    // Input initial details
    cout << "Enter Student Name: ";
    getline(cin, n);
    cout << "Enter Roll Number: ";
    cin >> r;
    cout << "Enter Marks (out of 100): ";
    cin >> m;

    s1.setDetails(n, r, m);
    s1.display();
    // Update name and marks
    string updatedName;
    float updatedMarks;
    cout << "\nUpdate Name: ";
    cin.ignore(); // Clear input buffer before getline
    getline(cin, updatedName);
    cout << "Update Marks: ";
    cin >> updatedMarks;

    // Chained method calls using this pointer
    s1.updateName(updatedName).updateMarks(updatedMarks);
    s1.display();
    return 0;
}
